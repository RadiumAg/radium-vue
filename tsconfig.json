{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "noImplicitUseStrict": true
  },
  "exclude": [
    "node_modules"
  ]
}