{
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@vp-components": ["doc/components/index.ts"]
    },
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./packages/**/*","doc/**/*","doc/.vitepress/**/*"]
}
